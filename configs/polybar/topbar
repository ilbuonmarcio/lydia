[colors]
foreground = #ffffff
foreground-alt = #f0f0f0
background = #77191919
background-alt = #77393939

[bar/topbar]
dpi = -1

width = 100%
height = 40

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

; border-size = 0
;border-color = #00000000

padding-left = 4
padding-right = 4

module-margin-left = 3
module-margin-right = 3

font-0 = Roboto:style=Regular:fontformat=truetype:size=10:antialias=true;2
font-1 = Material Icons:size=12:antialias=true;4
font-2 = Font Awesome 5 Brands:size=12:antialias=true;3

tray-position = right
tray-padding = 4
tray-background = ${colors.background-alt}

modules-left = i3
modules-center = spotify
modules-right = updatesavailable dockerrc mountedpartitions cpu memory usersconnected battery pulseaudio username date uptime pulseaudio

radius-bottom = 4

cursor-click = pointer
cursor-scroll = ns-resize

separator = |

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.foreground}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.foreground}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/cpu]
type = internal/cpu
interval = 1
format-underline = ${colors.foreground}
label =  %percentage%%
format = <label>

[module/memory]
type = internal/memory
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.foreground}
label = %gb_used%/%gb_total% (%percentage_used%%)

[module/eth]
; type = internal/network
; interface = enp7s0
; interval = 2.5

; format-connected-underline = ${colors.foreground}
; format-connected-prefix = " "
; format-connected-prefix-foreground = ${colors.foreground}
; label-connected = %local_ip%%downspeed:9%%upspeed:9%

[module/date]
type = internal/date
interval = 1

date = "%d/%m/%Y"

time = %H:%M:%S

format-underline = ${colors.foreground}
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =   %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted =  muted
label-muted-foreground = #666

[module/username]
type = custom/script
exec = whoami
label = %output%

[module/usersconnected]
type = custom/script
exec = users | wc -w
interval = 3
label = %output%
label-underline = ${colors.foreground}
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/mountedpartitions]
type = custom/script
exec = df -h | sed 1d | awk '{ if (substr($1,1,1) ~ /^\//) print "["$6" "$4"]"}' | sort | xargs | sed 's/\]\ \[/\]\ \ \[/g'
interval = 30
label =  %output%
label-underline = ${colors.foreground}
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/dockerrc]
type = custom/script
exec = sudo docker ps -q | wc -l
interval = 2
label =  %output%
label-underline = ${colors.foreground}
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/updatesavailable]
type = custom/script
exec = yay -Sy 1>/dev/null && yay -Qu | wc -l
interval = 300
label =  %output%
label-underline = ${colors.foreground}
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/spotify]
type = custom/script
interval = 1
format-prefix = "  "
format = <label>
exec = python ~/.scripts/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954

[module/uptime]
type = custom/script
format = <label>
interval = 30
exec = uptime --pretty
