[colors]
foreground = #ffffff
foreground-alt = #f0f0f0
background = #77191919
background-alt = #aa393939

[bar/topbar]
dpi = ${xrdb:Xft.dpi:-1}

width = 100%
height = 42

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Roboto:style=Regular:fontformat=truetype:size=9:antialias=true;2
font-1 = Material Icons:size=12:antialias=true;6
font-2 = Cascadia Code:style=Regular:fontformat=truetype:size=10:antialias=true;2

tray-position = right
tray-padding = 4

modules-left = logo i3 currentapptitle 
modules-center = 
modules-right = mountedpartitions cpu memory interfaces date mediacontrol firewalld

cursor-click = pointer
cursor-scroll = ns-resize

radius = 0
; separator = |

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = true

label-mode-padding = 3
label-mode-foreground = #fff
label-mode-background = ${colors.foreground}

; ; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.foreground-alt}
label-focused-underline = ${colors.foreground-alt}
label-focused-foreground = ${colors.background-alt}
label-focused-padding = 4

; ; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 4
label-unfocused-foreground = #00ee00
label-unfocused-background = #99333333

; ; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = #ee00ee
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; ; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 4

[module/cpu]
type = internal/cpu
interval = 0.115
format-underline = #ef0707
format = <ramp-coreload>
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
label-active-font = 3
format-padding = 4

[module/memory]
type = internal/memory
interval = 1
format-underline = #CCFACC
label = %percentage_used%% (%gb_total%)
label-padding = 4

[module/date]
type = custom/script
interval = 1
exec = date +"%d/%m/%y %H:%M:%S"
label-padding = 4
label-underline = #FFFFFF
click-left = sudo timedatectl set-ntp true

[module/mountedpartitions]
type = custom/script
exec = df -h | sed 1d | awk '{ if (substr($1,1,1) ~ /^\//) print "["$6" "$4"]"}' | sort | xargs | sed 's/\]\ \[/\]\ \ \[/g'
interval = 30
label = %output%
label-underline = #FFB700
label-background = ${colors.background}
label-padding = 4

[module/spotify]
type = custom/script
interval = 1
label =  %output%
exec = python ~/.scripts/spotify_status.py -f '{artist}: {song}'
label-underline = #1db954
label-padding = 4

[module/interfaces]
type = custom/script
format = <label>
interval = 120
format-underline = #CCFAFA
label-padding = 4
exec = ip addr | grep "inet " | grep "scope global" | awk '{print $2}' | xargs | sed -e 's/ / - /g'

[module/firewalld]
type = custom/script
exec = echo " "
label-padding = 4
click-left = ~/.scripts/toggle_firewalld_service.sh

[module/mediacontrol]
type = custom/script
format = <label>
label-padding = 4
exec = echo ""
click-left = mate-volume-control

[module/currentapptitle]
type = custom/script
format = <label>
interval = 0.1
format-underline = #cc99ee
format-padding = 4
exec = xdotool getactivewindow getwindowname 2>/dev/null

[module/logo]
type = custom/script
exec = echo ""
label-padding = 6
click-left = ~/.scripts/lockscreen_corrupted.sh
