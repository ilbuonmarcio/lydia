[colors]
foreground = #ffffff
foreground-alt = #f0f0f0
background = #00000000
background-alt = #000000

[bar/topbar]
dpi = ${xrdb:Xft.dpi:-1}
monitor = ${env:MONITOR:}

width = 100%
height = 48

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Inter:style=Regular:size=10:antialias=true;3
font-1 = Material Icons:style=Regular:size=14:antialias=true;7
font-2 = Noto Color Emoji:style=Regular:scale=9;4

tray-position = right
tray-padding = 6
tray-maxsize = 22

modules-left = i3 currentapptitle 
modules-center = date
modules-right = wired-network firewalld search lockscreen

cursor-click = pointer
cursor-scroll = ns-resize

radius = 0
; separator = |

[module/wired-network]
type = internal/network
interface = eno1
label = <label-connected>
label-connected = %downspeed:2% %upspeed:2%
label-connected-padding = 4

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = true

label-mode-padding = 3
label-mode-foreground = #fff

; ; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = #22ffffff
; label-focused-underline = ${colors.foreground-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 3

; ; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 3
label-unfocused-foreground = ${colors.foreground}
;label-unfocused-background = #99333333

; ; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = #ee00ee
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; ; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 3

[module/date]
type = custom/script
interval = 1
exec = date +"%d/%m/%y %H:%M:%S"
label-padding = 4
; label-underline = #FFFFFF
click-left = sudo timedatectl set-ntp true && firefox --new-window https://www.timeanddate.com/calendar/

[module/firewalld]
type = custom/script
exec = ~/.scripts/get_firewalld_status_icon.sh
label-padding = 3
tail = true
click-left = ~/.scripts/toggle_firewalld_service.sh

[module/currentapptitle]
type = custom/script
format = <label>
interval = 0.1
; format-underline = #cc99ee
format-padding = 3
exec = xdotool getactivewindow getwindowname 2>/dev/null

[module/lockscreen]
type = custom/script
exec = echo ""
label-padding = 3
click-left = ~/.scripts/lockscreen_corrupted.sh

[module/search]
type = custom/script
exec = echo ""
label-padding = 3
click-left = rofi -show run
