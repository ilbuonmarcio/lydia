[colors]
foreground = #ffffff
foreground-alt = #f0f0f0
background = #77191919
background-alt = #77393939

[bar/topbar]
dpi = -1

width = 100%
height = 40

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 3
module-margin-right = 3

font-0 = Roboto:style=Regular:fontformat=truetype:size=10:antialias=true;2
font-1 = Material Icons:size=12:antialias=true;4
font-2 = Font Awesome 5 Brands:size=12:antialias=true;3

tray-position = left
tray-padding = 4
tray-background = ${colors.background-alt}

modules-left = username spotify i3
modules-center = date currentapptitle uptime
modules-right = updatesavailable dockerrc mountedpartitions cpu memory interfaces firewalld-up

radius-bottom = 0

cursor-click = pointer
cursor-scroll = ns-resize

separator = |

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = true

label-mode-padding = 3
label-mode-foreground = #fff
label-mode-background = ${colors.foreground}

; ; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.foreground}
label-focused-padding = 3

; ; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 3

; ; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; ; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 3

[module/cpu]
type = internal/cpu
interval = 0.5
format-underline = #ef0707
label =  %percentage-sum%%
format = <label>

[module/memory]
type = internal/memory
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = #CCFACC
label = %gb_used%/%gb_total% (%percentage_used%%)

[module/date]
type = internal/date
interval = 1
date = "%d/%m/%Y"
time = %H:%M:%S
label = %date% %time%

[module/username]
type = custom/script
exec = whoami
label = %output%

[module/mountedpartitions]
type = custom/script
exec = df -h | sed 1d | awk '{ if (substr($1,1,1) ~ /^\//) print "["$6" "$4"]"}' | sort | xargs | sed 's/\]\ \[/\]\ \ \[/g'
interval = 30
label =  %output%
label-underline = #FFB700
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/dockerrc]
type = custom/script
exec = sudo docker ps -q | wc -l
interval = 2
label =  %output%
label-underline = #0db7ed
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/updatesavailable]
type = custom/script
exec = yay -Sy 1>/dev/null && yay -Qu | wc -l
interval = 300
label =  %output%
label-underline = #1793d1
label-background = ${colors.background}
label-padding-left = 2
label-padding-right = 2

[module/spotify]
type = custom/script
interval = 1
format-prefix = "  "
format = <label>
exec = python ~/.scripts/spotify_status.py -f '{artist}: {song}'
format-underline = #1db954

[module/uptime]
type = custom/script
format = <label>
interval = 30
exec = uptime --pretty

[module/interfaces]
type = custom/script
format = <label>
interval = 120
format-underline = #CCFAFA
exec = ip addr | grep "inet " | grep "scope global" | awk '{print $2}' | xargs | sed -e 's/ / - /g'

[module/firewalld-up]
type = custom/script
format = <label>
interval = 5
label-background = #ef0707
label-foreground = ${colors.foreground}
exec = sudo firewall-cmd --state
label-padding = 5

[module/currentapptitle]
type = custom/script
format = <label>
interval = 0.5
format-underline = #cc99ee
exec = xdotool getactivewindow getwindowname
