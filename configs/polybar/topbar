[colors]
foreground = #ffffff
foreground-alt = #f0f0f0
background = #29303030
background-alt = #29555555

[bar/topbar]
dpi = ${xrdb:Xft.dpi:-1}
monitor = ${env:MONITOR:}

width = 100%
height = 36

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Inter:style=Regular:size=10:antialias=true;3
font-1 = Material Icons:style=Regular:size=14:antialias=true;7
font-2 = Noto Color Emoji:style=Regular:scale=9;4

tray-position = right
tray-padding = 6
tray-maxsize = 22

modules-left = i3 currentapptitle 
modules-center = date spotify
modules-right = wired-network lockscreen volume

cursor-click = pointer
cursor-scroll = ns-resize

radius = 0
; separator = |

[module/wired-network]
type = internal/network
interface = eno1
label = <label-connected>
label-connected = %downspeed:2% %upspeed:2%
label-connected-padding = 4

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = false
wrapping-scroll = true

label-mode-padding = 2
label-mode-foreground = #fff

; ; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = #22ffffff
; label-focused-underline = ${colors.foreground-alt}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

; ; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground}
;label-unfocused-background = #99333333

; ; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = #8baf8b
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; ; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background-alt}
label-urgent-padding = 2

[module/date]
type = custom/script
interval = 1
exec = date +"%d/%m/%y %H:%M:%S"
label-padding = 4
; label-underline = #FFFFFF
click-left = sudo timedatectl set-ntp true

[module/currentapptitle]
type = custom/script
format = <label>
interval = 0.1
; format-underline = #cc99ee
format-padding = 3
exec = xdotool getactivewindow getwindowname 2>/dev/null

[module/lockscreen]
type = custom/script
exec = echo ""
label-padding = 4
click-left = ~/.scripts/lockscreen_corrupted.sh

[module/volume]
type = custom/script
exec = echo " $(pamixer --get-volume)%"
label-padding = 4
interval = 0.2

[module/spotify]
type = custom/script
interval = 1
label = %output%
exec = python ~/.scripts/spotify_status.py -f '{artist}: {song}'
label-underline = #1db954
label-padding = 4
